<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body >

    <nav class="navbar navbar-expand-lg navbar-dark bd-navbar">

        @Html.ActionLink("RO.Chat.IO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="@(ViewBag.Current == "Home" ? "active nav-item" : "nav-item")">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="@(ViewBag.Current == "Chat" ? "active nav-item" : "nav-item")">@Html.ActionLink("Chat", "Index", "Chat", null, new { @class = "nav-link" })</li>
                <li class="@(ViewBag.Current == "About" ? "active nav-item" : "nav-item")">@Html.ActionLink("Sobre", "About", "Home", null, new { @class = "nav-link" })</li>
            </ul>
                @Html.Partial("_LoginPartial", new { @class = "nav-link" })
        </div>
    </nav>

    <div >
        @RenderBody()
    </div>

    <footer class="page-footer font-small fixed-bottom">
        <div class="footer-copyright text-center py-3">
            <p>&copy; @DateTime.Now.Year - oliveira_rafaelnasc</p>
        </div>
    </footer>


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>